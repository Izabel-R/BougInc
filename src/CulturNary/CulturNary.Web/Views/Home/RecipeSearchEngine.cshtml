<section class="text-center py-5 row search-engine-section p-3 row">
    <div class="col-md-4 col-sm-12">
        <div class="selection-menu search-menu-section">
            <div class="d-flex justify-content-center align-items-center">
                <a asp-controller="Home" asp-action="SearchEngines" class="nutrition-search-btn icon-btn">
                    Recipes
                </a>
                <img class="nutrition-btn" src="/media/icons8-healthy-eating-50.png" />
            </div>
