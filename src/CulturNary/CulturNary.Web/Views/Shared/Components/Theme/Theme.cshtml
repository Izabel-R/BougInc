@model ThemeViewModel

@if (Model.Brightness == "dark")
{

    switch(Model.Color)
    {
        case "green": 
            <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>;
            break;

        case "red": 
            <link rel="stylesheet" href="~/css/darkred.css" asp-append-version="true"/>;
            break;

        case "blue":
            <link rel="stylesheet" href="~/css/darkblue.css" asp-append-version="true"/>;
            break;

        case "purple":
            <link rel="stylesheet" href="~/css/darkpurple.css" asp-append-version="true"/>;
            break;

        default: 
            <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>;
            break;
    }
}
else if (Model.Brightness == "light")
{
    switch(Model.Color)
    {
        case "green": 
            <link rel="stylesheet" href="~/css/lightgreen.css" asp-append-version="true"/>;
            break;

        case "red":
            <link rel="stylesheet" href="~/css/lightred.css" asp-append-version="true"/>;
            break;

        case "blue":
            <link rel="stylesheet" href="~/css/lightblue.css" asp-append-version="true"/>;
            break;

        case "purple":
            <link rel="stylesheet" href="~/css/lightpurple.css" asp-append-version="true"/>;
            break;

        default: 
            <link rel="stylesheet" href="~/css/lightgreen.css" asp-append-version="true"/>;
            break;
    }
}
else
{
    switch(Model.Color)
    {
        case "green": 
            <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>;
            break;

        case "red": 
            <link rel="stylesheet" href="~/css/darkred.css" asp-append-version="true"/>;
            break;

        case "blue": 
            <link rel="stylesheet" href="~/css/darkblue.css" asp-append-version="true"/>;
            break;

        case "purple":
            <link rel="stylesheet" href="~/css/darkpurple.css" asp-append-version="true"/>;
            break;

        default: 
            <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>;
            break;
    }
}