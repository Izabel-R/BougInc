@page
@model DietRestrictionsModel
@{
    ViewData["Title"] = "Change your Dietary Restrictions";
    ViewData["ActivePage"] = ManageNavPages.Profile;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger-custom" role="alert"></div>
            <div class="form-check mb-3">
                <input type="checkbox" asp-for="Input.DairyFree" class="form-check-input" id="dairyFreeCheck">
                <label asp-for="Input.DairyFree" class="form-check-label">Dairy-Free</label>
                <span asp-validation-for="Input.DairyFree" class="text-danger-custom"></span>
            </div>
            <div class="form-check mb-3">
                <input type="checkbox" asp-for="Input.Kosher" class="form-check-input" id="kosherCheck">
                <label asp-for="Input.Kosher" class="form-check-label">Kosher</label>
                <span asp-validation-for="Input.Kosher" class="text-danger-custom"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg profile-btn">Save</button>
        </form>
        <a class="profile-link" asp-page="Profile">Return to your Profile</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}