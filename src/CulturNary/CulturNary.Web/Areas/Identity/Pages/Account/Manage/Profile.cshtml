@page
@model ProfileModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Profile;
    Layout = "_Layout.cshtml";
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="container mt-4">
    <div class="row align-items-start">
        <div class="col-md-6 text-center">
            @if(string.IsNullOrEmpty(Model.DisplayName))
            {
                <h2>You have not set a display name.</h2>
            }
            else
            {
                <h2>@Model.DisplayName</h2>
            }
            <div class="profile-bio-box">
                @if(string.IsNullOrEmpty(Model.Biography))
                {
                    <p>You have not set a biography.</p>
                }
                else
                {
                    <p>@Model.Biography</p>
                }
            </div>
            <form id="edit-displayname" asp-page="EditDisplayName" method="post">
                <button class="w-30 btn btn-lg profile-btn" type="submit">Edit Display Name</button>
            </form>
            <form id="edit-biography" asp-page="EditBiography" method="post">
                <button class="w-30 btn btn-lg profile-btn" type="submit">Edit Biography</button>
            </form>
        </div>
        <div class="col-md-6 text-center">
            <br>
            <br>
            @if(string.IsNullOrEmpty(Model.ProfilePicture))
            {
                <img src="~/Media/ProfileImages/default.png" alt="Profile Image" class="img-fluid pfp-rounded-circle"/>
            }
            else
            {
                <img src="@Model.ProfilePicture" alt="Profile Image" class="img-fluid pfp-rounded-circle" />
            }
            <form id="edit-profilepic" asp-page="EditProfileImage" method="post">
                <button class="w-20 btn profile-btn" type="submit">Change Profile Image</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
