@page
@model ProfileModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Profile;
    Layout = "_Layout.cshtml";
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <h1>Test</h1>
        <h1>@(string.IsNullOrEmpty(Model.DisplayName) ? "You have not set a display name" : Model.DisplayName)</h1>
        <h1>@(string.IsNullOrEmpty(Model.Biography) ? "You have not set a biography" : Model.DisplayName)</h1>
        @if(string.IsNullOrEmpty(Model.ProfilePicture))
        {
            <img src="~/Media/ProfileImages/scrungle.jpg" alt="Profile Image" />
        }
        else
        {
            <img src="@Model.ProfilePicture" alt="Profile Image" />
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
